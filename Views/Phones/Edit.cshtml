@model LabAspMvc.ViewModels.PhonesNCategoriesNBrandsViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Phone</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.Phone.Id" />
            <div class="form-group">
                <label asp-for="@Model.Phone.Name" class="control-label"></label>
                <input asp-for="@Model.Phone.Name" class="form-control" />
                <span asp-validation-for="@Model.Phone.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Phone.Description" class="control-label"></label>
                <input asp-for="@Model.Phone.Description" class="form-control" />
                <span asp-validation-for="@Model.Phone.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Phone.Price" class="control-label"></label>
                <input asp-for="@Model.Phone.Price" class="form-control" />
                <span asp-validation-for="@Model.Phone.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Phone.CategoryId" class="control-label"></label>
                <select asp-for="@Model.Phone.CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                <span asp-validation-for="@Model.Phone.CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Phone.BrandId" class="control-label"></label>
                <select asp-for="@Model.Phone.BrandId" class="form-control" asp-items="ViewBag.BrandId"></select>
                <span asp-validation-for="@Model.Phone.BrandId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
